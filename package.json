{
  "name": "astro",
  "version": "0.0.1",
  "description": "Your homelab space.",
  "main": "bin/server/index.js",
  "scripts": {
    "db:init": "ts-node --project tsconfig.server.json ./server/config/initDb.ts",
    "dev": "NODE_ENV=development ts-node-dev --ignore-watch .next --project tsconfig.server.json server/index.ts",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "NODE_ENV=production next start",
    "typeorm": "ts-node --project tsconfig.server.json ./node_modules/typeorm/cli.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix server src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-igorsheg:igorsheg/astro.git"
  },
  "keywords": [
    "homelab",
    "self-hosted",
    "kubernetes",
    "docker",
    "react",
    "dashboard"
  ],
  "author": "Igor Shegolev",
  "license": "Apache-2.0",
  "dependencies": {
    "@koa/router": "^10.0.0",
    "@radix-ui/react-icons": "^1.0.2",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "immer": "^8.0.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-connect": "^2.1.0",
    "lodash": "^4.17.21",
    "next": "latest",
    "polished": "^4.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-spring": "^8.0.27",
    "react-use-gesture": "^9.0.4",
    "reakit": "^1.3.5",
    "reset-css": "^5.0.1",
    "sqlite3": "^5.0.1",
    "styled-components": "^5.2.1",
    "typeorm": "^0.2.31",
    "yup": "^0.32.9",
    "zustand": "^3.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@types/compression": "^1.7.0",
    "@types/figlet": "^1.2.1",
    "@types/koa": "^2.11.8",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__router": "^8.0.4",
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.2",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "chalk": "^4.1.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "figlet": "^1.5.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "replace-in-file": "^6.1.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.5",
    "winston": "^3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
